{
  "rules": {
    "visitors": {
      ".read": true,
      ".write": true,
      "$visitor_id": {
        ".validate": "newData.hasChildren(['timestamp', 'lastActive'])"
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "admins": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid"
      }
    }
  }
}